# Oracle Cloud Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_APP=src/main.py
FLASK_ENV=production
FLASK_RUN_HOST=0.0.0.0
FLASK_DEBUG=False

# Database Configuration (Oracle Autonomous Database)
# Format: postgresql://username:password@hostname:port/database
# Example: postgresql://admin:MyPassword123@adb-free-instance.adb.us-ashburn-1.oraclecloud.com:1522/mydb_high
DATABASE_URL=postgresql://your_db_user:your_db_password@your_autonomous_db_host:1522/your_db_name_high

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production

# CORS Configuration (if needed)
CORS_ORIGINS=http://localhost,https://your-domain.com

# Application Configuration
DEBUG=False
TESTING=False

# Oracle Cloud Specific Settings
OCI_REGION=us-ashburn-1
OCI_TENANCY_ID=your-tenancy-ocid
OCI_USER_ID=your-user-ocid
OCI_FINGERPRINT=your-api-key-fingerprint
OCI_PRIVATE_KEY_PATH=/path/to/your/private/key.pem

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/pricing_crm.log

# Performance Settings
WORKERS=4
TIMEOUT=120
KEEPALIVE=2

# Cache Settings (if using Redis)
REDIS_URL=redis://localhost:6379/0

# Email Settings (if using email notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
